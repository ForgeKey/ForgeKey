{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "ForgeKey",
  "version": "1.0.0-beta.4",
  "identifier": "com.ForgeKey.dev",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEM1MUIzRTc2NUM1Mzk2QTgKUldTb2xsTmNkajRieFgxRy9OM2pWLzVrWXNZMm5vaFdJREVTSzh6V1diZzVzMUxBWHdCR1RkdTEK",
      "endpoints": [
        "https://github.com/ForgeKey/ForgeKey/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  },
  "app": {
    "windows": [
      {
        "title": "ForgeKey",
        "fullscreen": false,
        "height": 400,
        "width": 350,
        "alwaysOnTop": true,
        "closable": false,
        "decorations": false,
        "dragDropEnabled": false,
        "focus": true,
        "hiddenTitle": true,
        "label": "main",
        "maximizable": false,
        "minimizable": false,
        "resizable": false,
        "shadow": false,
        "visible": false,
        "transparent": true,
        "theme": "Light"
      }
    ],
    "macOSPrivateApi": true,
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "category": "DeveloperTool",
    "createUpdaterArtifacts": true,
    "externalBin": [],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
